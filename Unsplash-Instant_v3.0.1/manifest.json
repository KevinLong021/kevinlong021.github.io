{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Unsplash Instant",
  "version": "3.0.1",
  "manifest_version": 2,
  "description": "Beautiful photos from Unsplash in your new tabs.",
  "homepage_url": "https://instant.unsplash.com",
  "icons": {
    "128": "img/icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com http://localhost:35729/livereload.js; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "cookies",
    "storage",
    "unlimitedStorage",
    "https://unsplash.com/",
    "https://proxy.unsplash.com/"
  ]
}
